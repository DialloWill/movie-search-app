{
  "name": "movie-search-app",
  "version": "1.0.0",
  "description": "Sleek movie search app wrapped in Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^26.2.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.yourdomain.moviesearchapp",
    "productName": "Movie Search App",
    "files": [
      "**/*"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
